{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "width": 250,
  "height": 125,
  "padding": 5,
  "autosize": {
    "type": "fit",
    "resize": true
  },

  "data": [
    {
      "name": "source"
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "utc",
      "nice": true,
      "domain": {"data": "source", "field": "time"},
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "nice": true,
      "zero": false,
      "domain": {"data": "source", "field": "steps"},
      "range": "height"
    }
  ],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "orient": "bottom",
      "title": "Time",
      "labelOverlap": true
    },
    {
      "scale": "y",
      "grid": true,
      "orient": "left",
      "title": "Steps",
      "labelOverlap": true
    }
  ],

  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "from": {"data": "source"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "time"},
          "width": {"scale": "x", "band": "1"},
          "y": {"scale": "y", "field": "steps"},
          "y2": {"scale": "y", "value": "0"},
          "opacity": {"value": 1},
          "stroke": {"value": "#AFD856"}
        }
      }
    }
  ]
}

